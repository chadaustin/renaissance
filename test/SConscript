Import('*')

env = env.Copy(tools=['Renaissance', 'Boost', 'BoostTest'])

sources = Split("""
    TestMain.cpp

    BasicProgram.cpp
    CodeGeneration.cpp
    Comments.cpp
    ConstantProgram.cpp
    EmptyProgram.cpp
    ErrorLine.cpp
    Errors.cpp
    Expression.cpp
    Functions.cpp
    Literals.cpp
    Swizzle.cpp
    Uniforms.cpp
    VectorConcatenation.cpp
""")

# Depend on the test programs so that typing "scons test" makes everything
# for test.py up-to-date as well.
testProgramsLocation = Dir('#/stage/bin')

runner = env.Program('testRunner', sources)
AlwaysBuild( Alias('test', [runner, testProgramsLocation], runner[0].path) )
