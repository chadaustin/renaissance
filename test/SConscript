Import('*')

env = env.Copy(tools=['Renaissance', 'Boost', 'BoostTest'])

sources = Split("""
    TestMain.cpp

    Attributes.cpp
    BasicProgram.cpp
    Branch.cpp
    CodeGeneration.cpp
    Comments.cpp
    ConstantProgram.cpp
    Constants.cpp
    EmptyProgram.cpp
    ErrorLine.cpp
    Errors.cpp
    Expression.cpp
    Frequency.cpp
    Functions.cpp
    Liftable.cpp
    Literals.cpp
    Prefix.cpp
    Sharing.cpp
    Specialize.cpp
    Stage.cpp
    Swizzle.cpp
    Uniforms.cpp
    VectorConcatenation.cpp

    Types.cpp
""")

runner = env.Program('testRunner', sources)
AlwaysBuild( env.Alias('test', [runner], runner[0].path) )

testProgramsLocation = Dir('#/stage/bin')
env.Alias('testprogs', testProgramsLocation)
